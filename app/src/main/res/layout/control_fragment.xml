<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.parking.control.ControlFragment">

    <data>
        <variable
            name="controlViewModel"
            type="com.example.smartparking.ui.parking.control.ControlViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Via Ponzio 34"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available parking spots: "
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/txt_free_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="230dp"/>

        <ImageView
            android:id="@+id/iv_mqtt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            tools:src="@tools:sample/avatars" />
    </FrameLayout>

</layout>